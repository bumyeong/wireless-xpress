<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <RelativeLayout
            android:id="@+id/progress_bar_top_rel_lay"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            >
            <com.bw.ydb.widgets.TextProgressBar
                android:id="@+id/mUpgradeBar"
                style="@style/CustomProgressBar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                />
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="60dp"
                android:id="@+id/mUpgradeFilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorYAHEI" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fwupdate_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Start"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/fwupdate_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:layout_gravity="bottom" />
    </LinearLayout>
</RelativeLayout>